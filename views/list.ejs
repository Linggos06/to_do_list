<%- include('header') -%>

    <div class="box" id="heading">
        <h1> <%= kindOfDay %></h1>
    </div>

    <div class="box">
        <% listOfItems.forEach(function(item){ %>
            <form action="/delete" method="post">
            <div class="item">
                <input type="checkbox" onChange="this.form.submit()" name="checkbox" value="<%= item._id %>">
                <input type="hidden" name="listName" value="<%= kindOfDay %>">
                <p><%= item.name%></p>
            </div>
        </form>
      <%  }) %>
       
      

        <form action="/" method="post" class="item">
            <input type="text" name="nextItem" placeholder="Next item" autocomplete="off" required>
            <button type="submit" name="list" value="<%= kindOfDay  %>">+</button>
        </form>


    </div>
    <%- include('footer') -%>



